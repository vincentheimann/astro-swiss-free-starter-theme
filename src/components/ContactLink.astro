---
export interface Props {
  type: 'phone' | 'email';
  value: string;
  label?: string;
  size?: 'sm' | 'md' | 'lg';
}

const { type, value, label, size = 'md' } = Astro.props;

const href = type === 'phone' ? `tel:${value}` : `mailto:${value}`;
const ariaLabel = type === 'phone' 
  ? `Call ${label || value}` 
  : `Email ${label || value}`;

const sizeClasses = {
  sm: 'text-sm gap-2 p-2',
  md: 'text-base gap-2 px-3 py-2',
  lg: 'text-lg gap-3 px-4 py-3'
};

const iconSizes = {
  sm: 'w-4 h-4',
  md: 'w-5 h-5',
  lg: 'w-6 h-6'
};
---

<a
  href={href}
  class={`contact-link inline-flex items-center ${sizeClasses[size]} rounded-lg hover:bg-muted transition-all duration-200 hover:scale-[1.02] group`}
  aria-label={ariaLabel}
>
  <!-- Icon (Filled Style) -->
  <span class={`contact-icon text-primary transition-transform group-hover:scale-110 ${iconSizes[size]}`}>
    {type === 'phone' ? (
      <!-- Filled Phone Icon -->
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
        <path fill-rule="evenodd" d="M1.5 4.5a3 3 0 0 1 3-3h1.372c.86 0 1.61.586 1.819 1.42l1.105 4.423a1.875 1.875 0 0 1-.694 1.955l-1.293.97c-.135.101-.164.249-.126.352a11.285 11.285 0 0 0 6.697 6.697c.103.038.25.009.352-.126l.97-1.293a1.875 1.875 0 0 1 1.955-.694l4.423 1.105c.834.209 1.42.959 1.42 1.82V19.5a3 3 0 0 1-3 3h-2.25C8.552 22.5 1.5 15.448 1.5 6.75V4.5Z" clip-rule="evenodd" />
      </svg>
    ) : (
      <!-- Filled Email Icon -->
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
        <path d="M1.5 8.67v8.58a3 3 0 0 0 3 3h15a3 3 0 0 0 3-3V8.67l-8.928 5.493a3 3 0 0 1-3.144 0L1.5 8.67Z" />
        <path d="M22.5 6.908V6.75a3 3 0 0 0-3-3h-15a3 3 0 0 0-3 3v.158l9.714 5.978a1.5 1.5 0 0 0 1.572 0L22.5 6.908Z" />
      </svg>
    )}
  </span>
  
  <!-- Value -->
  <span class="contact-value font-medium text-sm group-hover:underline">
    {value}
  </span>
</a>
